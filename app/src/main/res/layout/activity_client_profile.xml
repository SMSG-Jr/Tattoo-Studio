<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ClientProfileActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_editClientProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/client_profile"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView_editClientPhoto"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/lavender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_editClientProfile"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_editProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/name"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_editClientPhoto"
        app:layout_constraintTop_toTopOf="@+id/imageView_editClientPhoto" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_clientProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_placeholder"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView_editProfileName"
        app:layout_constraintTop_toBottomOf="@+id/textView_editProfileName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_editProfileBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/birth_date"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_clientProfileBirth"
        app:layout_constraintStart_toStartOf="@+id/textView_clientProfileBirth" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_clientProfileBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/date_placeholder"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_editClientPhoto"
        app:layout_constraintStart_toEndOf="@+id/imageView_editClientPhoto" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_editProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/e_mail"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_editClientPhoto"
        app:layout_constraintTop_toBottomOf="@+id/imageView_editClientPhoto" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_clientProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/email_placeholder"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_editProfileEmail"
        app:layout_constraintStart_toEndOf="@+id/textView_editProfileEmail"
        app:layout_constraintTop_toTopOf="@+id/textView_editProfileEmail" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_editProfilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/phone_number"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView_editProfileEmail"
        app:layout_constraintTop_toBottomOf="@+id/textView_editProfileEmail" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_clientProfilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/phone_placeholder"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_editProfilePhone"
        app:layout_constraintStart_toEndOf="@+id/textView_editProfilePhone"
        app:layout_constraintTop_toTopOf="@+id/textView_editProfilePhone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_editProfileInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/instagram"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView_editProfilePhone"
        app:layout_constraintTop_toBottomOf="@+id/textView_editProfilePhone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_clientProfileInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/text_placeholder"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_editProfileInstagram"
        app:layout_constraintStart_toEndOf="@+id/textView_editProfileInstagram"
        app:layout_constraintTop_toTopOf="@+id/textView_editProfileInstagram" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_profileTattoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tattoos"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageView_editClientPhoto"
        app:layout_constraintTop_toBottomOf="@+id/textView_editProfileInstagram" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_clientTattooAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/number_placeholder"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_profileTattoo"
        app:layout_constraintStart_toEndOf="@+id/textView_profileTattoo"
        app:layout_constraintTop_toTopOf="@+id/textView_profileTattoo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_profileTattooCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/total_tattoo_cost"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView_profileTattoo"
        app:layout_constraintTop_toBottomOf="@+id/textView_profileTattoo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_clientProfileTattooCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/value_placeholder"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_profileTattooCost"
        app:layout_constraintStart_toEndOf="@+id/textView_profileTattooCost"
        app:layout_constraintTop_toTopOf="@+id/textView_profileTattooCost" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_profileFirstTattoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/first_tattoo_date"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView_profileTattooCost"
        app:layout_constraintTop_toBottomOf="@+id/textView_profileTattooCost" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_clientProfileFirstTattoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/date_placeholder"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_profileFirstTattoo"
        app:layout_constraintStart_toStartOf="@+id/textView_profileFirstTattoo"
        app:layout_constraintTop_toBottomOf="@+id/textView_profileFirstTattoo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_profileLastTattoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/last_tattoo_date"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView_profileFirstTattoo"
        app:layout_constraintTop_toTopOf="@+id/textView_profileFirstTattoo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_clientProfileLastTattoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/date_placeholder"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_profileLastTattoo"
        app:layout_constraintStart_toStartOf="@+id/textView_profileLastTattoo"
        app:layout_constraintTop_toBottomOf="@+id/textView_profileLastTattoo" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton_addTattoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add"
        android:contentDescription="@string/add_tattoo_button"
        android:focusable="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_clientTattooList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_clientProfileLastTattoo" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imageButton_editProfile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>